[Unit]
Description=Language App API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/language_app/backend
Environment="PATH=/var/www/language_app/backend/.venv/bin"
EnvironmentFile=/var/www/language_app/backend/.env
ExecStart=/var/www/language_app/backend/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
