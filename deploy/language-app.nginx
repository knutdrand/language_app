# Language App API - Nginx Configuration
# Copy to /etc/nginx/sites-available/language-app
# Then: sudo ln -s /etc/nginx/sites-available/language-app /etc/nginx/sites-enabled/

# Option 1: Subdomain (recommended) - replace YOUR_DOMAIN
server {
    listen 80;
    server_name language-api.YOUR_DOMAIN.com;

    location / {
        proxy_pass http://127.0.0.1:8001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Serve static audio files directly (faster than through Python)
    location /audio/ {
        alias /var/www/language_app/backend/audio/;
        expires 7d;
        add_header Cache-Control "public, immutable";
    }
}

