# Language App Backend - Environment Variables
# Copy this file to .env and fill in the values

# ====== REQUIRED FOR PRODUCTION ======

# Secret key for JWT tokens - MUST be set in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Database URL
# Development (SQLite): sqlite+aiosqlite:///./data/app.db
# Production (PostgreSQL): postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# CORS allowed origins (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8081,http://localhost:8082

# ====== OPTIONAL ======

# JWT token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# JWT algorithm (default: HS256)
ALGORITHM=HS256
